{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API with dotnet watch",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": ["watch"],
      "cwd": "${workspaceFolder}/API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/api/activities"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
